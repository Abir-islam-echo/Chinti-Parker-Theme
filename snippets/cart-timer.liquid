<style>
  .cart-timer-section * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    text-decoration: none;
    transition: all 0.3s;
    line-height: normal !important;
  }
  .cart-timer-section .section-contents {
    padding-top: 20px;
  }
  .cart-timer-section.timer-ended{
    max-height: 0px;
    overflow: hidden;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s;
  }
  .cart-timer-section .content-wrapper {
    display: flex;
    gap: 5px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
  }
  .cart-timer-section .content-wrapper .text-content p {
    color: #000;
    font-weight: 400;
    font-size: 16px;
  }
  .cart-timer-section .content-wrapper .time-div {
    display: flex;
    align-items: baseline;
  }
  .cart-timer-section .content-wrapper .clock-svg {
    display: flex;
    padding-bottom: 1.5px
  }
  .cart-timer-section .content-wrapper .time-div .quote-mark {
    color: #000;
  }
  .cart-timer-section .content-wrapper .time-div .box {
    width: 20px;
    text-align: center;
  }
  .cart-timer-section .content-wrapper .time-div .time {
    color: #000;
    font-size: 16px;
    font-weight: 600;
  }

  @media only screen and (max-width: 550px) {
    .cart-timer-section .section-contents {
      padding: 20px;
    }
  }
</style>

<script>
const cartTimer=()=>{
  const cartminutesDiv = document.querySelector(".cart-timer-section .content-wrapper .time-div .minutes .time");
  const cartsecondsDiv = document.querySelector(".cart-timer-section .content-wrapper .time-div .seconds .time");
  // const endTime = new Date((new Date().getTime())+(30*60*1000));
  const endTime = new Date(JSON.parse(localStorage.getItem("cartTimer", "timeCount")));

  const clearCartAjax = () => {
    fetch('/cart/clear.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      })
  }
  
  const addTrailingZero = (num) => {
      return num < 10 ? `0${num}` : num;
  }
  
  const updateTimer = (element, value) => {
      element.textContent = addTrailingZero(value);
  }

  const handleCountdownCompletion = () => {
        localStorage.removeItem("cartTimer");
        clearCartAjax();
        document.querySelector(".shopping-bag").innerHTML = `<div class="expired-cart"><h1><span>Your</span><span>Cart</span><span>Has</span><span>Expired</span></h1></div>`;
        setTimeout(()=>{
          window.location.reload();
        },3000)
        if(timeInterval){   
          clearInterval(timeInterval);
        };
    return;
  } 
  const countDown = () => {
      const currentTime = new Date();
      const cartremainingTime = endTime.getTime() - currentTime.getTime();
      if (cartremainingTime < 60000){
        document.querySelector(".cart-timer-section .text-content.changeable").textContent = "seconds left to validate your cart" ;
        
      }
      if (cartremainingTime < 0) {
        handleCountdownCompletion();
        return;
      }
      updateTimer(cartminutesDiv, Math.floor((cartremainingTime % (1000 * 60 * 60)) / (1000 * 60)));
      updateTimer(cartsecondsDiv, Math.floor((cartremainingTime % (1000 * 60)) / 1000));
  }
  countDown();
  var timeInterval = setInterval(countDown, 1000);
}
  if(localStorage.getItem("cartTimer")){
    cartTimer(); 
    document.querySelector(".cart-timer-section").style.display = "block" ;
  }
  else{
    document.querySelector(".cart-timer-section").style.display = "none" ;
  }
</script>
