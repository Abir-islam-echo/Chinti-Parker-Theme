<!-- cart timer -->
<style>
  .template-cart .shopping-bag .page-title {
    padding: 30px 0px;
  }
  .template-cart .shopping-bag .expired-cart {
    height: calc(100vh - 200px);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .template-cart .shopping-bag .expired-cart h1 {
    display: flex;
    gap: 8px;
    font-size: 40px;
    max-width: 40ch;
    text-align: center;
    transform: scale(0.94);
    animation: scale 3s forwards cubic-bezier(0.5, 1, 0.89, 1);
  }

  @keyframes scale {
    100% {
      transform: scale(1);
    }
  }

  .expired-cart span {
    display: inline-block;
    opacity: 0;
    filter: blur(4px);
  }

  .expired-cart span:nth-child(1) {
    animation: fade-in 0.8s 0.1s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  .expired-cart span:nth-child(2) {
    animation: fade-in 0.8s 0.2s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  .expired-cart span:nth-child(3) {
    animation: fade-in 0.8s 0.3s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  .expired-cart span:nth-child(4) {
    animation: fade-in 0.8s 0.4s forwards cubic-bezier(0.11, 0, 0.5, 0);
  }

  @keyframes fade-in {
    100% {
      opacity: 1;
      filter: blur(0);
    }
  }
  @media only screen and (max-width: 550px) {
    .template-cart .shopping-bag .expired-cart h1 {
      font-size: 28px;
    }
  }
</style>
