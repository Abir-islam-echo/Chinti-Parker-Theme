<div class="page-width rich-text">
  <div class="grid">
    <div class="grid__item {% unless section.settings.full_width %} medium-up--two-thirds medium-up--push-one-sixth{% endunless %} custom-text-wrapper">
      {% if section.settings.section_title != blank %}
        <div class="rich-text__heading text-center">
          <h2 class="h3">{{ section.settings.section_title | escape }}</h2>
        </div>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rich-text__text rte-setting text-center">{{ section.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Rich text",
  "class": "index-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Wide display"
    },
            {
      "type": "range",
      "id": "block_gap",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Gap",
      "default": 10
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Heading",
      "default": "Talk about your brand"
    },
        {
      "type": "range",
      "id": "heading_font_size",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Heading Font size",
      "default": 20
    },
    {
      "type": "color",
      "id": "heading_font_color",
      "label": "Heading Font olor",
      "default": "#000000"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Sub-heading Font size",
      "default": 20
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Sub-heading Font color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Rich text",
      "category": "Text"
    }
  ]
}
{% endschema %}

<style>
  .rich-text .rich-text__text p{
    font-size:{{ section.settings.font_size }}px;
    color: {{ section.settings.font_color }};
  }
  .rich-text .rich-text__heading h2{
    font-size:{{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_font_color }};
  }
  .rich-text .custom-text-wrapper{
      display: flex;
      flex-direction: column;
      gap: {{ section.settings.block_gap }}px;
    }
  }
</style>
