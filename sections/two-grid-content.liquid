    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap:40px;

}
.two-grid-content .grid-col {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 30px;
}
.two-grid-content .grid-content-rich-text{
  margin-top:30px;
}
.grid-wrapper  p{
    color:#000;  
}
.grid-left{
  order:0;
}
.grid-right{
  order:1;
}

