
<div data-section-id="{{ section.id }}" data-section-type="banner-section" class="banner-section banner-section-01 banner-hero-section" style="margin-top:{{ section.settings.section_margin_top }}px">
    <div class="row">
        {% for block in section.blocks %}
            <div class="col">
                {% if block.settings.image %}
                    <picture>
                        <source
                            media="(min-width: 1440px)"
                            srcset="{{ block.settings.image | img_url: '2560x' }} 1x,
                            {{ block.settings.image | img_url: '5120x' }} 2x,
                            {{ block.settings.image | img_url: '7680x' }} 3x"
                        >
                        >
                        <source
                            media="(min-width: 768px)"
                            srcset="{{ block.settings.image | img_url: '1440x' }} 1x,
                            {{ block.settings.image | img_url: '2880x' }} 2x,
                            {{ block.settings.image | img_url: '4320x' }} 3x"
                        >
						{% if block.settings.mobile_image %}
                            <source
                                srcset="{{ block.settings.mobile_image | img_url: '500x' }} 1x,
                                {{ block.settings.mobile_image | img_url: '1000x' }} 2x,
                                {{ block.settings.mobile_image | img_url: '1500x' }} 3x"
                            >
                        {% endif %}

                        <img
                            src="{{ block.settings.mobile_image | img_url: '500x' }} 1x,
                            {{ block.settings.mobile_image | img_url: '1000x' }} 2x,
                            {{ block.settings.mobile_image | img_url: '1500x' }} 3x"
                            alt="{% if block.settings.heading %}{{ block.settings.heading | escape }}{% endif %}"
                        />
					</picture>
                {% else %}
                    <div class="placeholder-background">
                        {% capture current %}{% cycle 1, 2 %}{% endcapture %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                {% endif %}
            </div>

            <a class="link" href="{% if block.settings.link != blank %}{{ block.settings.link }} {% else %}#{% endif %}">
                <span class="content {{ block.settings.text_color }} {{ block.settings.text_color_mobile }}" style="justify-content:{{ block.settings.text_align_vertical }}; align-items:{{ block.settings.text_align_horizontal }}">
                    <span class="title" style="font-size:{{ block.settings.font_size  }}px; font-weight:{{ block.settings.font_weight  }} ">{% if block.settings.heading %}{{ block.settings.heading  }}{% endif %}
                      {% if block.settings.button_text != blank %}
                       <span class='cta-wrap'> <span class="btn" style="font-size:{{block.settings.font_size_button}}px">{{block.settings.button_text}} </span>
                      {% endif %}
                    </span>
            </a>
                    
                </span>
            </a>
        {% endfor %}
    </div>
</div>


{% schema %}
  {
 	"name": "Banner-01",
 	"class": "index-section",
 	"max_blocks": 1,
 	"settings": [
      {
        "type": "number",
        "id": "section_margin_top",
        "label": "Section Margin Top",
        "default":10
      }
    ],
 	"blocks": [{
 		"type": "image",
 		"name": "Image",
 		"settings": [{
 				"type": "image_picker",
 				"id": "image",
 				"label": "Image"
 			},
 			{
 				"type": "image_picker",
 				"id": "mobile_image",
 				"label": "Mobile Image"
 			},
 			{
 				"type": "text",
 				"id": "heading",
 				"label": "Heading",
 				"default": "Heading..."
 			},
 			{
 				"type": "number",
 				"id": "font_size",
 				"label": "Heading font size",
 				"default": 60
 			},
            {
 				"type": "number",
 				"id": "font_weight",
 				"label": "Heading font weight",
 				"default": 400
 			},
 			{
 				"type": "select",
 				"id": "text_color",
 				"label": "Text color",
 				"options": [{
 						"value": "text-light",
 						"label": "Light"
 					},
 					{
 						"value": "text-dark",
 						"label": "Dark"
 					}
 				],
 				"default": "text-light"
 			},
 			{
 				"type": "select",
 				"id": "text_color_mobile",
 				"label": "Text color Mobile",
 				"options": [{
 						"value": "text-light-mobile",
 						"label": "Light"
 					},
 					{
 						"value": "text-dark-mobile",
 						"label": "Dark"
 					}
 				],
 				"default": "text-light-mobile"
 			},
 			{
 				"type": "select",
 				"id": "text_align_vertical",
 				"label": "Banner Text Alignment Vertical",
 				"options": [{
 						"value": "flex-start",
 						"label": "Top"
 					},
 					{
 						"value": "center",
 						"label": "Center"
 					},
 					{
 						"value": "end",
 						"label": "Bottom"
 					}
 				],
 				"default": "center"
 			},
 			{
 				"type": "select",
 				"id": "text_align_horizontal",
 				"label": "Banner Text Alignment Horizontal",
 				"options": [{
 						"value": "flex-start",
 						"label": "Left"
 					},
 					{
 						"value": "center",
 						"label": "Center"
 					},
 					{
 						"value": "end",
 						"label": "Right"
 					}
 				],
 				"default": "center"
 			},
 			{
 				"type": "url",
 				"id": "link",
 				"label": "Banner link"
 			},
 			{
 				"type": "text",
 				"id": "button_text",
 				"label": "Button text",
 				"default": "Shop Now"
 			},
            {
 				"type": "number",
 				"id": "font_size_button",
 				"label": "Button text Size",
 				"default": 25
 			}
            
 		]
 	}],
 	"presets": [{
 		"name": "Banner-01",
 		"category": "Image",
 		"settings": {

 		},
 		"blocks": [{
 			"type": "image"
 		}]
 	}]
 }
{% endschema %}
<style>
  .banner-section-01 .content  {
    display: flex;
    height: 100%;
    flex-direction: column;
    padding-left:6rem;
    padding-right:6rem;
  }
  .banner-section-01 .content .title{
    font-family: gotham book;
    display:flex;
    flex-direction:column;
    text-align:center;
  }
  .banner-section-01 .content .btn {
    border: 1px solid white;
    padding: 15px 30px;
    line-height: 25px;
    position:relative;
    z-index: 1;
    transition: color .45s cubic-bezier(.785,.135,.15,.86),border .45s cubic-bezier(.785,.135,.15,.86);
    text-transform:none ;
  }
  .banner-section-01 .content .cta-wrap{
    text-align:center;
    padding-top: 30px;
    display: flex;
    justify-content: center;
  }
  .banner-section-01 .content .btn:hover {
    border: 1px solid white;
    color: white;
  }
  .banner-section-01 .content .btn:before {
    background: #ffffff;
    position: absolute;
    content: "";
    display: block;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    transform: scaleX(0);
    transform-origin: left center;
    z-index: -1;
  }
  .banner-section-01 .content .btn hover:before {
    transform: scale(1);
    
  }


  
  @media screen and (max-width: 1200px) {
    
    
    .banner-section-01 .content .title{
      font-size:25px !important;
    }
    .banner-section-01 .content .btn {
      font-size:20px !important;
      padding:10px 15px !important;
    }
  .banner-section-01 .content .cta-wrap{
    padding-top: 20px;
  }
  
}
  @media screen and (max-width: 768px) {
    .banner-section-01 .content  {
      -webkit-justify-content: flex-end !important;
      justify-content:flex-end !important;
      align-items:center !important;
      padding-top: 3rem;
      padding-bottom: 3rem;
      padding-left:2.375rem;
      padding-right: 2.375rem;
    }
  }

 @media screen and (max-width: 400px) {
  .banner-section-01 .content .title{
      font-size:20px !important;
    }
   .banner-section-01 .content .btn {
      font-size:16px !important;
      padding:8px 15px !important;
    }
    .banner-section-01 .content  {
      padding-left:1.375rem;
      padding-right: 1.375rem;
    }
   
 }
</style>