{% stylesheet %}

  
 .extra-tips-section *{
   box-sizing:border-box;
 } 
.extra-tips-section { 
    border-top: 3px solid black;
    padding-top: 30px;
    margin-top: 30px !important;
}
.extra-tips-section h1.extra-tips-title {
    font-size: 35px;
}
.extra-tips-section .extra-tips-grid-wrapper {
    padding: 20px 0px;
    display: flex;
    justify-content: space-between; 
    gap:40px;
}
.extra-tips-section .extra-tips-block-content h2 {
    font-size: 25px ;
    padding-bottom: 20px; 
    color:#000;
}
.extra-tips-section .extra-tips-block-content p, .extra-tips-section .extra-tips-block-content a {
    font-size:20px ;
    color:#000; 
}
 
.extra-tips-section .extra-tips-image {
    padding: 20px 0px;
}
.custom-content-01 .rte-setting p {
    color:#000; 
}  

@media screen and (max-width: 768px) {
  
  .extra-tips-section .extra-tips-grid-wrapper {
    gap: 0px !important; 
    flex-direction: column;
  }
  .extra-tips-section .extra-tips-block-content p {
    font-size: 16px !important; 
  }
  

  
}


  
{% endstylesheet %}

