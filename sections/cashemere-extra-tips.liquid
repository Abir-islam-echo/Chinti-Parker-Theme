<section class="el-container">
  <div class="extra-tips-section">
    <div class="extra-tips-heading">
      <h1 class="extra-tips-title">{{ section.settings.heading }}</h1>
    </div>
    <div class="extra-tips-grid-wrapper">
      <div class="extra-tips-left">
          <div class="extra-tips-inner-wrap">
            <div class="extra-tips-block">
              <div class="extra-tips-block-content">
                <h2>{{ section.settings.heading_1 }}</h2>
                <p>{{ section.settings.content_1 }}</p>
                <div class="extra-tips-image">
                  <img src="{{ section.settings.content_1_image | img_url : '900x' }}" alt="">
                </div>
              </div>
              <div class="extra-tips-block-content">
                <h2>{{ section.settings.heading_2 }}</h2>
                <p>{{ section.settings.content_2 }}</p>
                <div class="extra-tips-image">
                  <img src="{{ section.settings.content_2_image | img_url : '900x' }}" alt="">
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="extra-tips-right">
          <div class="extra-tips-inner-wrap">
            <div class="extra-tips-block">
              <div class="extra-tips-block-content">
                <h2>{{ section.settings.heading_3 }}</h2>
                <p>{{ section.settings.content_3 }}</p>
                <div class="extra-tips-image">
                  <img src="{{ section.settings.content_3_image | img_url : '900x' }}" alt="">
                </div>
              </div>
              <div class="extra-tips-block-content">
                <h2>{{ section.settings.heading_4 }}</h2>
                <p>{{ section.settings.content_4 }}</p>
                <div class="extra-tips-image">
                  <img src="{{ section.settings.content_4_image | img_url : '900x' }}" alt="">
                </div>
              </div>
            </div>
          </div>
      </div>
      
    </div>
  </div>
</section>

