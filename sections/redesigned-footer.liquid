{% schema %}
{
	"name": "Footer",
	"settings":
	[
		{
			"type": "checkbox",
			"id": "show_payment_icons",
			"label": "Show Payment Icons"
		},

      {
        "type": "color",
        "id": "footer-background",
        "label": "Footer Background",
        "default": "#ffffff"
      },
		{
			"type": "link_list",
			"id": "footer_linklist",
			"label": "Footer 1"
		},
		{
			"type": "link_list",
			"id": "footer_linklist_two",
			"label": "Footer 2"
		},
		{
			"type": "link_list",
			"id": "footer_linklist_three",
			"label": "Footer 3"
		},
		{
			"type": "text",
			"id": "service_number",
			"label": "Customer Service"
		},
		{
			"type": "text",
			"id": "store-contact",
			"label": "Store Contact"
		},
		{
			"type": "text",
			"id": "customer_service_email",
			"label": "Email"
		},
        {
			"type": "textarea",
			"id": "store-address",
			"label": "Store Address",
            "default":"336 King's Road, London, SW3 5UR"
		},
        {
			"type": "text",
			"id": "store-phone",
			"label": "Store Phone Number",
            "default":"07770791329"
		},
      {
        "type": "color",
        "id": "copyright-background",
        "label": "Copyright Background",
        "default": "#ffffff"
      }


	],
  "blocks": [
    {
      "type": "content",
      "name": "Content",
      "settings":[
        {
          "type": "richtext",
          "id": "content-heading",
          "label": "Heading"
        },
        {
          "type": "url",
          "id": "content-link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button-text",
          "label": "Button Text"

        },
                {
          "type": "color",
          "id": "text-color",
          "label": "Text Color"
        },
        {
          "type": "color",
          "id": "background-color",
          "label": "Background Color"
